{
  "include": ["./lib/**/*.ts"],
  "exclude": ["**/node_modules"],
  "compilerOptions": {
    "lib": ["es2023"],
    "noEmit": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "target": "es6",
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "strict": false,
    "checkJs": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true
  }
}
