{
  "name": "huetiful-js",
  "version": "2.2.0",
  "type": "module",
  "main": "./src/index.js",
  "browser": "./lib/huetiful.umd.js",
  "jsdelivr": "./lib/huetiful.min.umd.js",
  "exports": {
    "./generators": "./src/generators.js",
    "./colors": "./src/colors.js",
    "./utils": "./src/utils.js",
    "./sortBy": "./src/sortBy.js",
    "./filterBy": "./src/filterBy.js",
    "./converters": "./src/converters.js",
    "./wrappers": "./src/wrappers.js",
    "./stats": "./src/stats.js",
    "./accessibility": "./src/accessibility.js",
    "./helpers": "./src/helpers.js",
    ".": "./lib/index.js"
  },
  "types": "./lib/huetiful.d.ts",
  "description": "Function oriented library for color manipulation ðŸ§ª",
  "dependencies": {
    "culori": "^4.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@types/culori": "^2.0.0",
    "commitizen": "^4.3.0",
    "cz-emoji-conventional": "^1.0.2",
    "dts-bundle-generator": "^8.0.1",
    "esbuild": "^0.17.19",
    "eslint": "^8.53.0",
    "github-emoji": "^1.2.0",
    "gulp": "^5.0.0",
    "husky": "^8.0.3",
    "jasmine": "5.1.0",
    "nodemon": "^3.0.1",
    "typedoc": "^0.25.3",
    "typedoc-material-theme": "^1.0.2",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "test": "npx jasmine",
    "docs": "npx typedoc --excludeReferences true --includeVersion false --excludeNotDocumented true --plugin typedoc-material-theme  --darkHighlightTheme material-theme-palenight --lightHighlightTheme material-theme-lighter --hideGenerator true --sitemapBaseUrl https://huetiful-js.com",
    "code:build": "node ./build.cjs",
    "code:publish": "npm run code:build & npm run code:types",
    "code:types": "dts-bundle-generator  -o  ./lib/huetiful.d.ts ./types/index.d.ts --no-banner",
    "code:lint": "eslint --fix --ext ./src/*.js",
    "code:format": "prettier \"./src/*.js\" --write",
    "code:clean": "npm run code:format & npm run code:lint",
    "start": "nodemon app.js --watch "
  },
  "husky": {
    "hooks": {}
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "root": true,
    "rules": {
      "prefer-const": 0,
      "no-console": 1,
      "no-ternary": 0,
      "no-var": 0,
      "no-explicit-any": 0,
      "no-useless-escape": 0
    }
  },
  "typedocOptions": {
    "entryPoints": [
      "src/accessibility.js",
      "src/stats.js",
      "src/wrappers.js",
      "src/generators.js",
      "src/utils.js",
      "src/colors.js",
      "src/converters.js",
      "src/filterBy.js",
      "src/sortBy.js"
    ],
    "excludeTags": [
      "@internal"
    ],
    "entryPointStrategy": "resolve",
    "out": "docs/www/api",
    "exclude": [
      "./color-maps"
    ],
    "readme": "none",
    "tsconfig": "./tsconfig.json",
    "gitRemote": "main",
    "themeColor": "#c084fc"
  },
  "files": [
    "lib",
    "src",
    "CHANGELOG.md",
    "CODE_OF_CONDUCT.md",
    "README.md",
    "CONTRIBUTING.md",
    "LICENSE.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xml-wizard/huetiful.git"
  },
  "keywords": [
    "generative art",
    "javascript",
    "uniform colorspaces",
    "color vision deficiency",
    "colors",
    "culori",
    "interpolation",
    "tailwindcss",
    "color brewer",
    "cielab",
    "cielch"
  ],
  "author": "Dean Tarisai",
  "email": "prjctimg@outlook.com",
  "homepage": "https://huetiful-js.com",
  "license": "Apache-2.0",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/xml-wizard /huetiful/issues"
  }
}
